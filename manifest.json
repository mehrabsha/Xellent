{
  "manifest_version": 3,
  "name": "Xpert",
  "version": "1.0",
  "description": "Enhance your X (formerly Twitter) engagement with smart features.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "src/options/options.html",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://x.com/*"],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/content/prompts.js", "src/content/tweetCollector.js", "src/content/content.js"],
      "css": ["src/styles/content.css"],
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "src/content/prompts.js"],
      "matches": ["https://x.com/*"]
    }
  ]
}
